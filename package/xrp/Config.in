comment "Xtensa Remote Processing needs a Linux kernel to be built"
	depends on !BR2_LINUX_KERNEL

config BR2_PACKAGE_XRP
	bool "XRP"
	depends on BR2_LINUX_KERNEL
	help
	  XRP is the low level Xtensa Remote Processing

config BR2_PACKAGE_XRP_USERSPACE
	bool "Build XRP userspace code"
	depends on BR2_PACKAGE_XRP
	default y
	help
	  XRP package contains kernel driver, host userspace library and
	  example code and firmware library and example code.
	  Say 'Y' here to build host userspace code.

if BR2_PACKAGE_XRP_USERSPACE

config BR2_PACKAGE_XRP_KERNEL_TESTS
	bool "Build XRP kernel driver tests"
	help
	  XRP package contains kernel driver, host userspace library and
	  example code and firmware library and example code.
	  Say 'Y' here to build tests for the kernel driver.

config BR2_PACKAGE_XRP_EXAMPLE
	bool "Build XRP example"
	default y
	help
	  XRP package contains kernel driver, host userspace library and
	  example code and firmware library and example code.
	  Say 'Y' here to build example code for host userspace.

endif

config BR2_PACKAGE_XRP_FIRMWARE
	bool "XRP firmware"
	help
	  XRP package contains kernel driver, host userspace library and
	  example code and firmware library and example code.
	  Say 'Y' here to build firmware code.

if BR2_PACKAGE_XRP_FIRMWARE

config BR2_PACKAGE_XRP_FIRMWARE_XTENSA_TOOLS
	string "Xtensa tools location"
	help
	  Xtensa tools location

config BR2_PACKAGE_XRP_FIRMWARE_XTENSA_NEED_SYSTEM
	bool "Separate Xtensa core registry location"
	default n
	help
	  Whether tools know where their core registry is or not (and so
	  need --xtensa-system= parameter).

config BR2_PACKAGE_XRP_FIRMWARE_XTENSA_SYSTEM
	string "Xtensa core registry location"
	depends on BR2_PACKAGE_XRP_FIRMWARE_XTENSA_NEED_SYSTEM
	help
	  Xtensa core registry location

config BR2_PACKAGE_XRP_FIRMWARE_DSP_CORE_NAME
	string "DSP core name"
	default visionp6cnn_ao_exls
	help
	  Xtensa core name used to build firmware.

config BR2_PACKAGE_XRP_FIRMWARE_EXAMPLE
	bool "Build XRP firmware example"
	default y
	help
	  XRP package contains kernel driver, host userspace library and
	  example code and firmware library and example code.
	  Say 'Y' here to build example firmware.

if BR2_PACKAGE_XRP_FIRMWARE_EXAMPLE

config BR2_PACKAGE_XRP_FIRMWARE_DSP_NUM_CORES
	int "Number of DSP cores"
	default 2
	help
	  Number of DSP cores served by the XRP driver. A firmware image
	  is built for each controlled DSP core.

config BR2_PACKAGE_XRP_FIRMWARE_DSP_LSP_XTSYS
	string "LSP source"
	default "$(TOPDIR)/board/xtsc/.../subsys.xtsys"
	help
	  Location of the subsystem configuration for LSP generation.

config BR2_PACKAGE_XRP_FIRMWARE_DSP_LSP
	string "LSP name for each core"
	default "$(@D)/xrp-example/soc/package/cores/...(DSP_%d)/xtensa-elf/lib/sim-stacklocal"
	help
	  Printf format string for LSP name for each core. May use %d or
	  similar format placeholder.

endif
endif
